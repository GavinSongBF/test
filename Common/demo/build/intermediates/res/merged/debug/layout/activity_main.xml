<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="simpleList"
    android:text="简单列表实现"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="pullToRefreshListView"
    android:text="列表下拉刷新"/>


  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="pinnedSectionList"
    android:text="列表分段，带段头"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="roundCornerView"
    android:text="圆角视图，圆形图片"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="choosePhoto"
    android:text="照片选择与查看"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="highlightView"
    android:text="自动按下高亮"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="customWidget"
    android:text="自定义控件样式"/>



  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="httpRequest"
    android:text="网络请求"/>


  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="cacheData"
    android:text="缓存数据"/>

</LinearLayout>
